<div class="container-fluid">
  <div class="row">
     <div class="col-sm-4">
      <ul class="nav flex-column">
        <% Service.all.each do |service| %>
        <li class="nav-item">
          <%= link_to service.name, service_path(id: service.id), class: "nav-link active side-menu" %>
         
        </li>
        <% end %>
      </ul>
    </div>
    <div class="col-sm-8">

    <h2><%= @service.name %></h2>
    <ul>
      <% @service.bullet_points.each do |service| %>
        <li><%=service %></li>
      <% end %>
    
    </ul>
    <p><%= @service.description %></p>

    <!-- CAROUSEL -->
    <div id="carouselExampleControls" class="carousel slide services" data-ride="carousel">
      <div class="carousel-inner services" role="listbox">
        
        <% @service.images.each_with_index do |image, index| %>
          <% if index == 0 %>
            <div class="carousel-item services active">
              <%= image_tag image, class: "d-block img-fluid"%>
            </div>
          <% else %>
            <div class="carousel-item services">
              <%= image_tag image, class: "d-block img-fluid"%>
            </div>
          <% end %>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

  </div>

  </div>
</div>